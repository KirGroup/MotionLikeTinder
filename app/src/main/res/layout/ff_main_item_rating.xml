<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#212426">

    <ImageView
        android:id="@+id/ivRatingChronic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:paddingBottom="@dimen/dimen_28dp"
        android:src="@drawable/ic_full_star"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivRatingChronic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:paddingBottom="@dimen/dimen_28dp"
        android:src="@drawable/ic_full_star"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivRatingChronic3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:paddingBottom="@dimen/dimen_28dp"
        android:src="@drawable/ic_full_star"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivRatingChronic4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:paddingBottom="@dimen/dimen_28dp"
        android:src="@drawable/ic_full_star"
        android:visibility="visible"
        tools:visibility="visible" />
    <ImageView
        android:id="@+id/ivRatingChronic5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:paddingBottom="@dimen/dimen_28dp"
        android:src="@drawable/ic_full_star"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvRatingChronic"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:visibility="visible"
        tools:text="4.9"
        tools:visibility="visible" />

</LinearLayout>