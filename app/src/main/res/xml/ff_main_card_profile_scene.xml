<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/rest">
        <Constraint
            android:id="@id/topCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Constraint
            android:id="@id/bottomCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/pass"
        app:deriveConstraintsFrom="@+id/rest">
        <Constraint
            android:id="@id/topCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:rotation="-12"
            android:layout_marginEnd="220dp"
            android:translationY="99dp"
            app:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/like"
        app:deriveConstraintsFrom="@id/rest">
        <Constraint
            android:id="@id/topCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:rotation="12"
            android:layout_marginStart="220dp"
            android:translationY="99dp"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>


    <Transition
        app:constraintSetEnd="@+id/pass"
        app:constraintSetStart="@+id/rest"
        app:duration="300">
        <OnSwipe
            app:dragDirection="dragLeft"

            app:touchAnchorId="@id/topCard"
            app:touchAnchorSide="left"
            app:touchRegionId="@id/topCard" />
    </Transition>

    <Transition
        app:constraintSetEnd="@+id/like"
        app:constraintSetStart="@+id/rest"
        app:duration="300">
        <OnSwipe
            app:dragDirection="dragRight"

            app:touchAnchorId="@+id/topCard"
            app:touchAnchorSide="right"
            app:touchRegionId="@id/topCard" />
    </Transition>


    <ConstraintSet android:id="@+id/offScreenPass">
        <Constraint
            android:id="@id/topCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="-12"
            android:layout_marginEnd="50dp"
            android:translationY="99dp"
            app:layout_constraintEnd_toStartOf="parent" />

        <Constraint
            android:id="@id/bottomCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/margin_1dp" />
            </ConstraintSet>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/offScreenPass"
        app:constraintSetStart="@+id/pass"
        app:duration="150" />


    <ConstraintSet android:id="@+id/offScreenLike">
        <Constraint
            android:id="@id/topCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="12"
            android:layout_marginStart="50dp"
            android:translationY="99dp"
            app:layout_constraintStart_toEndOf="parent" />

        <Constraint
            android:id="@id/bottomCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/margin_1dp" />

    </ConstraintSet>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/offScreenLike"
        app:constraintSetStart="@+id/like"
        app:duration="150" />

</MotionScene>